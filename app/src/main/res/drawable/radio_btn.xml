<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="@color/rPrimaryColor" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="@color/rRadioButtonUnSelectedColor" />                </shape>
            </item>
        </layer-list>
    </item>

</selector>