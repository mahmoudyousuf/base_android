                <TextView
                    android:id="@+id/chooseStatusTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/rTxtSecondaryColor"
                    android:text="@string/choose_status"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleTxt"/>



                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/radioGroup"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chooseStatusTxt"
                    >

                    <RadioButton
                        android:id="@+id/pendingRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pending"
                        android:onClick="checkButton"
                       />

                    <RadioButton
                        android:id="@+id/confirmedRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirmed"
                        android:onClick="checkButton"/>

                    <RadioButton
                        android:id="@+id/onServiceRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/on_services"
                        android:onClick="checkButton"/>



                    <RadioButton
                        android:id="@+id/doneRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/done"
                        android:onClick="checkButton"/>


                    <RadioButton
                        android:id="@+id/canceledRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelled"
                        android:onClick="checkButton"/>


                    <RadioButton
                        android:id="@+id/noShowRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_show"
                        android:onClick="checkButton"/>

                </RadioGroup>



                <TextView
                    android:id="@+id/dateRangeTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/rTxtSecondaryColor"
                    android:text="@string/data_range"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dateRangeTxt"
                    app:layout_constraintEnd_toEndOf="parent"
                    >


                <rubikans.rubik.doctor.custom_views.RubikEditText
                    android:id="@+id/fromDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    app:hint_ed="@string/from"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/toDate"

                    >



                </rubikans.rubik.doctor.custom_views.RubikEditText>




                    <rubikans.rubik.doctor.custom_views.RubikEditText
                        android:id="@+id/toDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        app:hint_ed="@string/to"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/fromDate"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >



                    </rubikans.rubik.doctor.custom_views.RubikEditText>

                </androidx.constraintlayout.widget.ConstraintLayout>


