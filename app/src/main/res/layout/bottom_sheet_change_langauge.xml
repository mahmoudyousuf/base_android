<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:behavior_hideable="true"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">


                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_home_indicator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/warning_xxl_colored"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/subTitle" />

                <TextView
                    android:id="@+id/subTitle"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/language"
                    app:layout_constraintStart_toEndOf="@+id/icon"
                    app:layout_constraintTop_toBottomOf="@+id/indicator" />

                <TextView
                    android:id="@+id/title"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:text="@string/change_app_language"
                    app:layout_constraintStart_toEndOf="@+id/icon"
                    app:layout_constraintTop_toBottomOf="@+id/subTitle"

                    />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/arabic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="العربية"
                    android:fontFamily="@font/poppins_regular"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="16dp"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/icon" />


                <TextView
                    android:id="@+id/divider_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/or"
                    android:textAllCaps="true"
                    android:textColor="#001846"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/arabic" />

                <View
                    android:id="@+id/dev_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@+id/divider_txt"
                    app:layout_constraintEnd_toStartOf="@+id/divider_txt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/divider_txt" />

                <View
                    android:id="@+id/dev_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@+id/divider_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/divider_txt"
                    app:layout_constraintTop_toTopOf="@+id/divider_txt" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/english"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="ENGLISH"
                    android:fontFamily="@font/poppins_regular"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    app:backgroundTint="@color/blue"
                    app:cornerRadius="16dp"
                    app:iconGravity="textStart"
                    app:iconPadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_txt" />


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/english" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>
